{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}